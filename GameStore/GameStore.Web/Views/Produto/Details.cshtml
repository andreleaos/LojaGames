@model GameStore.Domain.Dtos.ProdutoViewDto

@{
    ViewData["Title"] = "Details";
    var localExecution = ViewBag.LocalExecution as bool?;
}

<h3>Gestão de Produtos</h3>

<div>
    <h4>Detalhes</h4>
    <hr />
    <div class="form-container">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Descricao)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Descricao)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PrecoUnitario)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PrecoCurrencyFormat)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Categoria)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Categoria)
            </dd>

            @if (localExecution.HasValue && localExecution.Value)
            {
                <img src="data:image/png;base64,@Model.Database64Content" alt="Imagem" class="imagem-produto" />
            }
            else
            {
                <img src="@Model.UrlBlobStorage" class="imagem-produto" alt="@Model.Descricao">
            }
        </dl>
    </div>
</div>
<div>
    @Html.ActionLink("Editar", "Edit", new { id = Model.Id }) |
    <a asp-action="IndexLista">Voltar</a>
</div>
